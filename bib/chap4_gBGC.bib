  journal = {Gene},
  keywords = {Animals,Chromosomes,DNA,Evolution; Molecular,Genetic Code,Genome,Humans,Mutation,Phylogeny,Protein Biosynthesis,Repetitive Sequences; Nucleic Acid},
  language = {eng},
  number = {1},
  pmid = {10607893}
}

