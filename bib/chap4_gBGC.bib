@phdthesis{lesecque2014conversion,
  title = {{La conversion g{\'e}nique biais{\'e}e : origine, dynamique et intensit{\'e} de la quatri{\`e}me force d'{\'e}volution des g{\'e}nomes eucaryotes}},
