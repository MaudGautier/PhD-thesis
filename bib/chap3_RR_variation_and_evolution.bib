@article{flachs2012interallelic,
  ids = {flachs\_interallelic\_2012},
  title = {Interallelic and {{Intergenic Incompatibilities}} of the {{Prdm9}} ({{Hst1}}) {{Gene}} in {{Mouse Hybrid Sterility}}},
  author = {Flachs, Petr and Mihola, Ond{\v r}ej and {\v S}ime{\v c}ek, Petr and Gregorov{\'a}, So{\v n}a and Schimenti, John C. and Matsui, Yasuhisa and Baudat, Fr{\'e}d{\'e}ric and {de Massy}, Bernard and Pi{\'a}lek, Jaroslav and Forejt, Ji{\v r}{\'i} and Trachtulec, Zdenek},
  year = {2012},
