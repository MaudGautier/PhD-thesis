@article{baker2017repeated,
  ids = {baker\_repeated\_2017},
  title = {Repeated Losses of {{PRDM9}}-Directed Recombination despite the Conservation of {{PRDM9}} across Vertebrates},
  author = {Baker, Zachary and Schumer, Molly and Haba, Yuki and Bashkirova, Lisa and Holland, Chris and Rosenthal, Gil G and Przeworski, Molly},
  year = {2017},
